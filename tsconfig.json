{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "outDir": "dist",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "noImplicitThis": true,
    "pretty": true
  },
  "exclude": [
    "dist"
  ],
  "include": [
    "src/**/*"
  ]
}