{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "outDir": "__build",
    "noImplicitAny": true,
    "allowJs": true,
    "noImplicitThis": true,
    "pretty": true,
    "typeRoots": [
      "src/types"
    ]
  },
  "exclude": [
    "__build"
  ],
  "include": [
    "src/**/*"
  ]
}